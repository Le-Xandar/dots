#!/usr/bin/env bash

window="$( xdotool getactivewindow || xdotool getwindowfocus )"

sh  $HOME/bin/emacs-everywhere/bin/emacs-everywhere-emacstask

xdotool windowfocus --sync $window

clipboard="$( cat $(readlink -f ./clipboard ) | tr \\n \\r | sed s/\\r*\$// )"

xdotool type --clearmodifiers --delay 1 "$clipboard"
echo "" > $(readlink -f ./clipboard)
