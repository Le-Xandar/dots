#!/bin/bash

BIN_PATH=$HOME/bin/emacs-everywhere/bin/

err () { echo -e "Error: $@" 1>&2; }

case $OSTYPE in
    "darwin"*)
        $BIN_PATH/emacs-everywhere-osx
        ;;
    "linux-gnu")
        $BIN_PATH/emacs-everywhere-linux
        ;;
    *)
        err OS $OSTYPE isn\'t currently supported
        exit 1
        ;;
esac
